#!/bin/bash

{{- if eq .chezmoi.os "darwin" }}
ensure_homebrew() {
  set -e

  # Colors
  local RED='\033[0;31m'
  local GREEN='\033[0;32m'
  local BLUE='\033[0;34m'
  local NC='\033[0m'

  local log() { echo -e "${BLUE}[INFO]${NC} $1"; }
  local success() { echo -e "${GREEN}[SUCCESS]${NC} $1"; }
  local error() { echo -e "${RED}[ERROR]${NC} $1" >&2; }

  # Check if Homebrew is installed
  if command -v brew &> /dev/null; then
    success "Homebrew already installed: $(brew --version | head -n1)"
    return 0
  fi

  # Install Homebrew
  log "Installing Homebrew..."
  if /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"; then
    if command -v brew &> /dev/null; then
      success "Homebrew installed: $(brew --version | head -n1)"
      return 0
    else
      error "Installation completed but brew not found in PATH"
      return 1
    fi
  else
    error "Homebrew installation failed"
    return 1
  fi
}

ensure_homebrew
brew install ansible
{{- else if eq .chezmoi.os "linux" }}
{{-   if eq .chezmoi.osRelease.id "debian" }}
sudo apt-get update
sudo apt-get install -y ansible
{{-   else if eq .chezmoi.osRelease.id "fedora" }}
sudo dnf install -y ansible
{{-   end }}
{{- end }}

echo "Ansible installation complete."
